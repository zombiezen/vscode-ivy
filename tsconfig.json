{
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "rootDir": "src",
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
